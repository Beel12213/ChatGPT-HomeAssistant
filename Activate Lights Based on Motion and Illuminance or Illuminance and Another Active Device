alias: Activate Lights Based on Motion and Illuminance or Illuminance and Another Active Device
description: ''
trigger:
  - platform: state
    entity_id: binary_sensor.motion_sensor_1
    to: 'on'
  - platform: state
    entity_id: sensor.illuminance_sensor_1
    above: '50'
condition:
  - condition: state
    entity_id: input_boolean.active_device
    state: 'on'
  - condition: and
    conditions:
      - condition: state
        entity_id: sun.sun
        state: 'below_horizon'
      - condition: state
        entity_id: sensor.illuminance_sensor_1
        above: '5'
      - condition: state
        entity_id: input_select.room
        state_not: 'None'
action:
  - service: light.turn_on
    data:
      entity_id: light.bedroom_lights
mode: single
